{
  "mcpServers": {
    "firebase": {
      "command": "npx",
      "args": [
        "-y",
        "firebase-tools@latest",
        "experimental:mcp",
        "--only",
        "auth,firestore"
      ]
    }
  },
  "enabledTools": {
    "firebase": [
      "firebase_login",
      "firebase_logout",
      "firebase_get_project",
      "firebase_list_apps",
      "firebase_list_projects",
      "firebase_get_sdk_config",
      "firebase_create_project",
      "firebase_create_app",
      "firebase_create_android_sha",
      "firebase_consult_assistant",
      "firebase_get_environment",
      "firebase_update_environment",
      "firebase_init",
      "auth_get_user",
      "auth_disable_user",
      "auth_list_users",
      "auth_set_claim",
      "auth_set_sms_region_policy",
      "firestore_delete_document",
      "firestore_get_documents",
      "firestore_list_collections",
      "firestore_query_collection",
      "firestore_get_rules",
      "firestore_validate_rules",
      "firebase_get_admin_sdk_config"
    ]
  }
}